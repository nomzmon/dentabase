document.addEventListener('DOMContentLoaded', function () {
    // Get the container with patient information data attributes
    const formContainer = document.querySelector('.overlay.todo-form-file');

    // Retrieve patient data from data attributes
    const patient = {
        id: formContainer.dataset.patientId,
        firstName: formContainer.dataset.patientFirstname,
        lastName: formContainer.dataset.patientLastname,
        email: formContainer.dataset.patientEmail,
        phone: formContainer.dataset.patientPhone
    };

    // Populate form with patient information
    const patientNameField = document.getElementById('patient-name');
    const emailField = document.getElementById('email-todo');
    const phoneField = document.getElementById('phone-number');

    if (patientNameField && emailField && phoneField) {
        patientNameField.value = `${patient.firstName} ${patient.lastName}`;
        emailField.value = patient.email;
        phoneField.value = patient.phone;
    }

    console.log("Patient Name:", patientName);
    console.log("Email Value:", emailElement ? emailElement.value : "Not found");

});
