document.querySelector(".done-button").addEventListener("click", async (e) => {
    e.preventDefault();
    const data = {
        treatment: document.getElementById("treatment").value,
        patientName: document.getElementById("patient-name").value,
        email: document.getElementById("email").value,
        phone: document.getElementById("phone-number").value,
        date: document.getElementById("date").value,
        startTime: document.getElementById("start-time").value,
        endTime: document.getElementById("end-time").value,
        nextAppointmentDate: new Date(`${document.getElementById("date").value}T${document.getElementById("start-time").value}`) // Calculated field
    };
    
    const response = await fetch("/create-appointment", {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify(data)
    });

    if (response.ok) {
        // Handle successful creation, e.g., refresh the page or close the form
    } else {
        console.error("Failed to create appointment");
    }
});
